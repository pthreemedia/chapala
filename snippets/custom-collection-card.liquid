<li class="custom-mobile-banner-block content-for-product-grid cols-{{ block.settings.grid_width_in_3_column_grid }}">
  <a href="{{ block.settings.link_url }}" class="link custom-banner-link">
    <div
      class="content-for-product-grid custom-content-for-product-grid vert-{{ block.settings.headline_vertical_position }} horz-{{ block.settings.headline_horizontal_position }}"
      style="width: 100%; height: 100%;"
    >
      <div class="image-container">
        {% if block.settings.mobile_image %}
          <img
            class="mobile"
            src="{{ block.settings.mobile_image | image_url: width: 750 }}"
            loading="lazy"
          >
        {% endif %}
        {% if block.settings.desktop_image %}
          <img
            class="desktop"
            src="{{ block.settings.desktop_image | image_url: width: 2000 }}"
            loading="lazy"
          >
        {% endif %}
      </div>
      <div class="copy-container custom-copy-container">
        <div class="text">
          {% if block.settings.heading != null and block.settings.heading != '' %}
            <h3>{{ block.settings.heading }}</h3>
          {% endif %}
          {% if block.settings.subheading != null and block.settings.subheading != '' %}
            <h4>{{ block.settings.subheading }}</h4>
          {% endif %}
        </div>
        {% if block.settings.link_text and block.settings.button_toggle == 'show' %}
          <span class="cta-text">{{ block.settings.link_text }}</span>
        {% endif %}
      </div>
    </div>
  </a>
</li>
